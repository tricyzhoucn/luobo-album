/* pages/album.wxss */

page {
    background: #F2F2F2
}

.albums {
    padding: 24rpx;
    font-size: 32rpx;
}

.albums .album {
    margin-bottom: 24rpx;
    padding: 24rpxx;
    /* background: #ffffff; */
    position: relative;
    width: 350rpx;
    height: 300rpx;
}

.album-left {
    float: left;
}
  
.album-right {
    float: right;
}

.first-photo {
    width: 350rpx;
    height: 250rpx;
    background-color: #fff;
}

.first-photo view {
    width:100%;
    height:100%;
    background-size: contain;
    background-position: 50%;
    background-repeat: no-repeat;
}

.albums .album .name{
    float: left;
    margin-left: 4px;
    width: 200rpx;
    font-size: 22rpx;
}

/* 照片数量 */
.photo-total {
    float: right;
    text-align: center;
    vertical-align: top;
    /* background: #220707; */
    color: rgb(37, 18, 18);
    font-size: 22rpx;
    padding: 0 16rpx;  
}

.album-info {
    display: table-cell;
    vertical-align: middle;
    width: 350rpx;
    height: 50rpx;
    font-size: 0;
    background-color: #ffffff;
    border-top:1px solid #eee;
}

.options {              
    display: flex;  /* 所有子元素就会排成一行，且自动分配小大以充分展示元素的内容。 */
    flex-direction: row;  
    /* position: fixed;   */
    bottom: 2em;
    height: 138rpx;
    width: 100%;
    z-index: 100;
    left: 0;  
  }

  .add-album {
    float: right;
    width: 50%;
  }

  .options .add-item {
    display: block;
    margin: 0 auto;
    width: 127rpx;
    height: 151rpx;  
  }
